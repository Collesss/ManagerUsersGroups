<Window x:Class="ManagerUsersGroups.WpfUI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManagerUsersGroups.WpfUI"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="Auto" Width="450">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock TextWrapping="Wrap" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5" Text="Тип логина:"/>
        <TextBlock TextWrapping="Wrap" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5" Text="Путь:"/>
        <TextBlock TextWrapping="Wrap" Grid.Column="0" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5" Text="Имя пользователя:"/>
        <TextBlock TextWrapping="Wrap" Grid.Column="0" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5" Text="Пароль:"/>
        <TextBlock TextWrapping="Wrap" Grid.Column="0" Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5" Text="Тип аутентификации:"/>

        <ComboBox Grid.Column="1" Grid.Row="0" Width="120"/>
        
        <TextBox TextWrapping="NoWrap" Grid.Column="1" Grid.Row="1" Padding="2" Margin="3 3 5 3" VerticalContentAlignment="Center" TextAlignment="Left"/>
        <TextBox TextWrapping="NoWrap" Grid.Column="1" Grid.Row="2" Padding="2" Margin="3 3 5 3" VerticalContentAlignment="Center" TextAlignment="Left"/>
        <TextBox TextWrapping="NoWrap" Grid.Column="1" Grid.Row="3" Padding="2" Margin="3 3 5 3" VerticalContentAlignment="Center" TextAlignment="Left"/>

        <ComboBox Grid.Column="1" Grid.Row="5" Width="120"/>
    </Grid>
</Window>
